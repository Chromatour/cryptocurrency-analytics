{
    "env": {
        "es2020": true,
        "commonjs": false,
        "node": true
    },
    "extends": [
        "airbnb-typescript/base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "linebreak-style": 0,
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "never",
              "jsx": "never",
              "ts": "never",
              "tsx": "never"
            }
        ],
        "import/prefer-default-export": 0,
        "object-curly-spacing": ["error", "always", { "arraysInObjects": false }]
    }
}
